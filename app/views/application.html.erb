<!DOCTYPE html>
<html>
  <head>
    <title>Boilerplate</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'application' %>
    <%= javascript_include_tag 'https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js' %>
    <%= javascript_include_tag 'application' %>
    <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico" />
    <script type='text/javascript'>
      const translations = <%= ui_translations(:front) %>;
    </script>
    <script type='text/javascript'>
      I18n = {
        prefix: '<%= I18n.locale == I18n.default_locale ? "" : "#{I18n.locale}/" %>',
        locale: '<%= I18n.locale %>',
        availableLocales: <%= raw(I18n.available_locales.map {|loc| loc.to_s}) %>
      }
    </script>
  </head>
  <body class='front'>
    <div class="ui grid container" id='app'>
      <router-view></router-view>
    </div>
    <%= javascript_pack_tag 'application' %>
  </body>
</html>
